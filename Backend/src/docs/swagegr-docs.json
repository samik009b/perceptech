{
  "openapi": "3.0.3",
  "info": {
    "title": " AI Psychologist",
    "version": "1.0.0",
    "description": "API documentation for chat and authentication endpoints"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/chat": {
      "post": {
        "tags": ["Chat"],
        "summary": "Send a chat enquiry",
        "description": "Accepts a user's enquiry and returns the AI-generated response using Groq API.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "enquiry": {
                    "type": "string",
                    "example": "I am going through severe depression. Can you cheer me up ?"
                  }
                },
                "required": ["enquiry"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Chat response generated successfully"
          },
          "400": {
            "description": "Invalid or missing enquiry"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/chat/history": {
      "get": {
        "tags": ["Chat"],
        "summary": "Fetch chat history",
        "description": "Retrieves the last 10 chat messages (user and assistant responses) stored in the database.",
        "responses": {
          "200": {
            "description": "Chat history fetched successfully"
          },
          "404": {
            "description": "No chat history found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register new user",
        "description": "Creates a new user account in the database.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "samik123"
                  },
                  "email": {
                    "type": "string",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "securePassword123"
                  }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Invalid input or user already exists"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "User login",
        "description": "Authenticates user credentials and returns a JWT token upon success.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "securePassword123"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful, token returned"
          },
          "401": {
            "description": "Invalid email or password"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
